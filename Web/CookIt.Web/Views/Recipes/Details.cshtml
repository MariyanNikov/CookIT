@model CookIt.Web.ViewModels.Recipe.RecipeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="card" style="background: #eee">
    <div class="container-fliud">
        <div class="wrapper row">
            <div class="preview col-md-6">

                <div class="preview-pic tab-content">
                    <div class="tab-pane active" id="pic-1"><img src="@Model.Image" /></div>
                </div>
            </div>
            <div class="details col-md-6">
                <h3 class="product-title">@Model.Name</h3>
                <div class="rating">
                    <div class="stars">
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                    </div>
                    <span class="review-no">41 reviews</span>
                </div>
                <p class="product-description">@Model.Description</p>
                <h4 class="price">price: <span>@Model.Price <i class="fa fa-euro"></i></span></h4>
                <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <ul class="list-group d-flex flex-row flex-wrap w-100">
                            <li class="list-group-item active bg-success border border-success w-100 d-flex justify-content-start"><div class="w-50">Required Ingredients:</div> <div class="w-50 pl-4">Amount / Weight</div></li>
                            @*<li class="list-group-item active bg-success border border-success w-50">Amount / Weight</li>*@

                            @foreach (var ingredient in Model.Ingreients)
                            {
                                <li class="list-group-item w-50 d-flex justify-content-center">@ingredient.Name</li>
                                <li class="list-group-item w-50 d-flex justify-content-center">@ingredient.Amount</li>
                            }
                            @*<li class="list-group-item w-50 d-flex justify-content-center">Beef</li>
                                <li class="list-group-item w-50 d-flex justify-content-center">0.250 / kg</li>
                                <li class="list-group-item w-50 d-flex justify-content-center">Carrots</li>
                                <li class="list-group-item w-50 d-flex justify-content-center">2</li>
                                <li class="list-group-item w-50 d-flex justify-content-center">Garlic</li>
                                <li class="list-group-item w-50 d-flex justify-content-center">2</li>*@
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <div class="action d-flex justify-content-center">
                            <a href="#" class="btn btn-danger btn-block mr-4">Buy <i class="fa fa-credit-card"></i></a>

                        </div>

                        <div class="action d-flex justify-content-center mt-2">
                            <a href="#" class="btn btn-primary btn-block mr-4">Add to Cart <i class="fa fa-shopping-cart"></i></a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




