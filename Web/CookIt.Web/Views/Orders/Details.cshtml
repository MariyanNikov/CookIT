@model CookIt.Web.ViewModels.Order.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}
<div class="card" style="background: #eee">
    <div class="row">
        <div class="col-md-6 centered">
            <h3 class="text-center m-3"> Order Details</h3>
            <div class="m-3" style="font-family:'Century Schoolbook'">
                <h6>
                    <b class="text-primary">Issued On:</b> @Model.IssuedOn.ToString("D")
                </h6>
                <hr />
                <h6>
                    <b class="text-primary">Delivery Date:</b> @Model.DeliveryDate.ToString("D")
                </h6>
                <hr />
                <h6>
                    <b class="text-primary">Issuer Full Name:</b> @Model.FullNameIssuer
                </h6>
                <hr />
                <h6>
                    <b class="text-primary">Issuer Phone Number:</b> @Model.PhoneNumber
                </h6>
                <hr />
                <h6>
                    <b class="text-primary">Issuer Comment:</b> @Model.CommentIssuer
                </h6>
                <hr />
                <h6>
                    <b class="text-primary">Delivery Address:</b> @Model.DeliveryAddress
                </h6>
                <hr />
                <h6>
                    <b class="text-primary">Current Status:</b> @Model.OrderStatusName
                </h6>
                <hr />
                <h6>
                    <b class="text-primary">Courier:</b> @(Model.CourierName ?? "No Courier has taken this order")
                </h6>
            </div>
        </div>
        <div class="col-md-6 centered">
            <h3 class="mt-3 text-center">Recipes</h3>
            <div class="m-3">
                <vc:order-details-recipes order-id="@Model.Id" />
            </div>
        </div>
    </div>
</div>