@model List<CookIt.Web.ViewModels.Administration.CourierViewModel>
@{
    this.ViewData["Title"] = "Couriers";

}

<div class="row">
    <div class="col-md-6">
        <div class="d-flex justify-content-center">
            <p class="h4 mb-4">Couriers</p>
        </div>
        <table class="table table-bordered border-info table-hover">
            <partial name="_StatusMessage" for="@this.TempData["StatusMessage"]" />
            <thead class="thead-dark">
                <tr>
                    <th scope="auto">#</th>
                    <th scope="auto">Email</th>
                    <th scope="auto">Full Name</th>
                    <th scope="auto" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].FullName</td>
                        <td>
                            <form asp-area="Administration" asp-controller="Users" asp-action="RemoveCourier" asp-route-id="@Model[i].Id" method="post">
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-danger fa">Remove <i class="fa fa-close"></i></button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="col-md-6">
        <form class="text-center w-auto rounded" method="post">

            <p class="h4 mb-4">Make Courier</p>
            <hr class="bg-info" />

            <!-- E-mail -->
            <div asp-validation-summary="All" class="text-danger pb-1"></div>
            <input type="email" class="form-control mb-4" placeholder="E-mail" name="email">
            <span name="email" class="text-danger"></span>


            <hr class="bg-info" />

            <button class="btn btn-info btn-block" type="submit">Make Courier</button>

        </form>

    </div>
</div>
