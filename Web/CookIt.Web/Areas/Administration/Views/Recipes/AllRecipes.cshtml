@model List<CookIt.Web.ViewModels.Recipe.RecipeAllViewModel>

@{
    ViewData["Title"] = "AllRecipes";
}
   
        <p class="h5 mb-4 d-flex justify-content-center">All Recipes</p>
        @if (Model.Count == 0)
        {
            <div class="col-md-12 pt-2">
                <div class="alert alert-dark" role="alert">
                    There are no ingredients added.
                </div>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-center">
                
                    <partial name="_StatusMessage" for="@this.TempData["StatusMessage"]" />
                    <div class="table-responsive">
                        <table class="table table-bordered border-info">
                            <thead class="border-danger">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Portions</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                <tr>
                                    <th scope="row">@(i + 1)</th>
                                    <td>@Model[i].Name</td>
                                    <td>@Model[i].Price</td>
                                    <td>@Model[i].Portions</td>
                                    <td>@Model[i].Description</td>
                                    <td>
                                        <form method="post">
                                            <div class="d-flex justify-content-center">
                                                @*<button type="submit" asp-controller="Ingredients" asp-action="RemoveIngredient" asp-route-id="@Model[i].Id" class="close" aria-label="Close">
                        <span aria-hidden="true" style="color:red">&times;</span>
                    </button>*@
                                                <button type="submit" class="btn btn-danger fa" asp-controller="Ingredients" asp-action="RemoveIngredient" asp-route-id="@Model[i].Id">Remove <i class="fa fa-close"></i></button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                
            </div>
        }
